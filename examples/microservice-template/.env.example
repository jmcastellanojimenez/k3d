# Service Configuration
SERVICE_NAME=ecotrack-service
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://postgres:ecotrack-postgres@postgresql:5432/ecotrack
DB_HOST=postgresql
DB_PORT=5432
DB_NAME=ecotrack
DB_USER=postgres
DB_PASSWORD=ecotrack-postgres

# Redis Configuration
REDIS_URL=redis://redis-master:6379
REDIS_HOST=redis-master
REDIS_PORT=6379
REDIS_PASSWORD=ecotrack-redis

# Kafka Configuration
KAFKA_BROKER=kafka:9092
KAFKA_CLIENT_ID=ecotrack-service
KAFKA_GROUP_ID=ecotrack-group

# External APIs
EXTERNAL_API_KEY=your-api-key-here
EXTERNAL_API_URL=https://api.example.com

# Monitoring
PROMETHEUS_PORT=9090
METRICS_PATH=/metrics

# Security
JWT_SECRET=your-jwt-secret-here
API_KEY=your-api-key-here

# Feature Flags
ENABLE_TRACING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true